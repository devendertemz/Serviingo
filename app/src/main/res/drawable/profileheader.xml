<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!-- com.groomingtechssolution.mdvtiindia.View background color -->
    <solid
        android:color="#0069b2"
        >
    </solid>
    <gradient
        android:startColor="#0069b2"
        android:centerColor="#0069b2"
        android:endColor="#0081da"
        />

    <!-- com.groomingtechssolution.mdvtiindia.View border color and width -->
    <stroke
        android:width="1dp"
        android:color="#0069b2" >
    </stroke>

    <!-- The radius makes the corners rounded -->
    <corners
        android:topLeftRadius="@dimen/_10sdp"
        android:topRightRadius="@dimen/_10sdp"
        android:bottomLeftRadius="1dp"
        android:bottomRightRadius="1dp">
    </corners>

</shape>