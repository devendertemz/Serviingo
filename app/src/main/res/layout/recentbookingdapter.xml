        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp">
        <TextView
            android:id="@+id/tvtvfirstId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Special Chicken"
            android:fontFamily="@font/teko"
            android:textStyle="bold"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/black"/>
            <TextView
                android:id="@+id/dateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22 Aug 2202 02:55 PM"
                android:gravity="right"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/_15sdp"
                />
        <TextView
            android:id="@+id/secondId"
            android:layout_below="@+id/tvtvfirstId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nov Beg Items"
            android:textSize="@dimen/_15sdp"
            />
            <TextView
                android:id="@+id/tvEditReview"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/secondId"
                android:background="@color/valueContent"
                android:gravity="center"
                android:layout_margin="@dimen/_5sdp"
                android:text="Order Details"
                android:textColor="@color/white" />
            <TextView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_toRightOf="@+id/tvEditReview"
                android:background="@color/color_progress"
                android:gravity="center"
                android:text="Cancel Order"
                android:layout_margin="@dimen/_5sdp"
                android:layout_below="@+id/secondId"
                android:textColor="@color/white" />
            <View
                android:layout_width="@dimen/_170sdp"
                android:id="@+id/view"
                android:layout_margin="@dimen/_5sdp"
                android:layout_height="@dimen/_1sdp"
                android:padding="@dimen/_2sdp"
                android:layout_below="@+id/tvEditReview"
                android:background="@color/black"/>
            <TextView
                android:layout_toRightOf="@+id/view"
                android:id="@+id/tv"
                android:padding="@dimen/_2sdp"
                android:layout_below="@+id/tvEditReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RS 295"
                android:textSize="@dimen/_15sdp"
                />

            <TextView
                android:id="@+id/tvgreen"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tvEditReview"
                android:background="@color/addtocart"
                android:gravity="center"
                android:layout_marginRight="@dimen/_5sdp"
                android:text="Completed"
                android:textColor="@color/white" />


            <TextView

                android:id="@+id/tvAddon"
                android:padding="@dimen/_2sdp"
                android:layout_below="@+id/view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add On Services"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_15sdp"
                />
            <TextView
                android:id="@+id/tvservices"
                android:padding="@dimen/_2sdp"
                android:layout_below="@+id/tvAddon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5. Daal"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_15sdp"
                />

        </RelativeLayout>
    <!--</androidx.cardview.widget.CardView>-->
</LinearLayout>