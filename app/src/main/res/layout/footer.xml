<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:text="About Us"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/termsandcond"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_15sdp"
                    android:text="Terms And Conditions"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvprivacyPolicy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:text="Privacy Policy"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tvfaq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_15sdp"
                    android:text="FAQ"
                    android:textColor="@color/white" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvrefundandcancellation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:text="Refund &amp; Cancellation Policy "
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tvContactus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_15sdp"
                    android:text="Contact Us"
                    android:textColor="@color/white" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@color/grey_light"
                android:paddingLeft="@dimen/_15sdp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/teko_semibold"
            android:text="Know More About Us"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:text="@string/heading5"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:fontFamily="@font/teko"
            android:text="Quick Links"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_termsCond"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:text="Terms &amp; Conditions"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:background="@drawable/dotted_line"
            android:layerType="software" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"

            android:text="Privacy Policy"

            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:background="@drawable/dotted_line"
            android:layerType="software" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"

            android:text="FAQ"

            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:background="@drawable/dotted_line"
            android:layerType="software" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"

            android:text="Contact Us"

            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:background="@drawable/dotted_line"
            android:layerType="software" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"

            android:text="Support"

            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:background="@drawable/dotted_line"
            android:layerType="software" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:fontFamily="@font/teko_semibold"
            android:text="Services"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"

            android:text="Vase"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@+id/search"
            android:background="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:text="Plants Decoration"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@+id/search"
            android:background="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:text="Transformer call Repeting"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@+id/search"
            android:background="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:text="Transformer Dialing"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@+id/search"
            android:background="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:text="Light Connection"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:layout_below="@+id/search"
        android:background="@color/white"
        android:padding="@dimen/_5sdp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:padding="@dimen/_5sdp">

        <TextView
            android:id="@+id/tvahemdabad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_45sdp"
            android:text="Ahemadabad"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvbengluru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/_5sdp"
            android:text="Benglore"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvDelhiCR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvahemdabad"
            android:layout_margin="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_45sdp"
            android:text="Delhi NCR"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvChandigarh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvbengluru"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/_5sdp"
            android:text="Chandigarh Tricity"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvHyderabad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/tvDelhiCR"
            android:layout_margin="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_45sdp"
            android:text="Hyderabad"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvkolkata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvChandigarh"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/_5sdp"
            android:text="Kolkata"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvNagpur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/tvHyderabad"
            android:layout_margin="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_45sdp"
            android:text="Nagpur"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvLudhiyana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvkolkata"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/_5sdp"
            android:text="Ludhiyana"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvVadodara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/tvNagpur"
            android:layout_margin="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_45sdp"
            android:text="Vadodara"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvKolkata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvLudhiyana"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/_5sdp"
            android:text="Kolkata"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvSurat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/tvVadodara"
            android:layout_margin="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_45sdp"
            android:text="Surat"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvIndore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvKolkata"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/_5sdp"
            android:text="Indore"
            android:textColor="@color/white" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:layout_below="@+id/search"
            android:background="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:gravity="center"
            android:text="@string/heading6"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp">

            <ImageView
                android:id="@+id/ivPinterest"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                android:padding="@dimen/_2sdp" />
<!--                android:src="@drawable/ic_pinterest" />-->

            <ImageView
                android:id="@+id/ivYoutube"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_margin="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_toLeftOf="@+id/ivPinterest"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/ic_youtube" />

            <ImageView
                android:id="@+id/ivinsta"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_margin="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_toLeftOf="@+id/ivYoutube"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/ic_instagram_logo" />

            <ImageView
                android:id="@+id/ivtwitter"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_margin="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_toLeftOf="@+id/ivinsta"
                android:padding="@dimen/_2sdp"/>
<!--                android:src="@drawable/ic_twitter" />-->

            <ImageView
                android:id="@+id/ivfacebook"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_margin="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_toLeftOf="@+id/ivtwitter"
                android:padding="@dimen/_2sdp"/>
<!--                android:src="@drawable/ic_facebook" />-->

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>