<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grey_border_box"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_30sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingBottom="@dimen/_20sdp">


        <ImageView
            android:id="@+id/close"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="right"
            android:src="@drawable/ic_close_foreground" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/roboto"
            android:text="Rate &amp; Reviews"
            android:textColor="@color/black_"
            android:textSize="@dimen/_18sdp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/roboto"
            android:paddingRight="@dimen/_15sdp"
            android:text="How would you rate your experience? Let us know in the field below."
            android:textColor="@color/black_"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_14sdp"
            android:fontFamily="@font/roboto"
            android:paddingRight="@dimen/_10sdp"
            android:text="Describe your experience"
            android:textColor="@color/black_"
            android:textSize="@dimen/_12sdp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:background="@null"
            android:fontFamily="@font/roboto"
            android:text=""
            android:textColor="@color/black_"
            android:textSize="@dimen/_12sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginRight="@dimen/_15sdp"

            android:background="@color/grey_" />

        <RadioGroup
            android:layout_width="@dimen/_320sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="left"
            android:gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black_"
                android:text="1 Star"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black_"
                android:text="2 Star"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black_"
                android:text="3 Star"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black_"
                android:text="4 Star"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp" />


            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black_"
                android:text="5 Star"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp" />
        </RadioGroup>

        <TextView
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llrg"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_15sdp"
            android:background="@drawable/review_bg"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="Send Reviews "
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp" />
    </LinearLayout>

</LinearLayout>