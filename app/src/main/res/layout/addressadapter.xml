<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPackage"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/allui"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="@dimen/_10sdp"
        app:cardCornerRadius="5dp"
        app:cardElevation="@dimen/_5sdp"
        app:contentPadding="0dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:padding="@dimen/_10sdp"
        >
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_baseline_check_circle_24"/>


        <TextView
            android:id="@+id/tvdate"
            android:layout_below="@+id/tvwallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_toRightOf="@+id/imageView"
            android:fontFamily="@font/roboto"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/black_text"
            android:text=" Home" />
        <TextView

            android:layout_below="@+id/tvdate"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toRightOf="@+id/imageView"
            android:textSize="@dimen/_11sdp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/black_text"
            android:text="1st Floor, Dayal Chamber,  Hazratganj, Lucknow - 226001, U.P., India" />

        <ImageView
            android:id="@+id/ivgreen"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/profile_image"
            android:background="@drawable/blackborder"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:src="@drawable/ic_trash"
            android:textColor="@color/white" />
        <ImageView
            android:id="@+id/ivgreens"
            android:layout_toLeftOf="@+id/ivgreen"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_below="@+id/profile_image"
            android:background="@drawable/blackborder"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:src="@drawable/ic_edit"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/white" />
    </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>