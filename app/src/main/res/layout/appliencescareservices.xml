<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/root_lay"
        layout="@layout/new_header"
        android:layout_height="@dimen/_50sdp"
        android:layout_width="match_parent"/>

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/root_lay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/ll_pack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                >

                <TextView
                    android:id="@+id/tvHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:gravity="center"
                    android:text="Appliances care services"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_toRightOf="@id/tvHeading"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_chevron_right" />
            </RelativeLayout>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginLeft="@dimen/_10sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:text="AC- Repair and services "
                android:textColor="@color/black"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/_10sdp"
                android:layout_height="@dimen/_130sdp"
                android:background="@drawable/round_border_bg"
                android:src="@drawable/ac" />

                <TextView
                    android:id="@+id/tvAc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:padding="@dimen/_5sdp"
                    android:text="AC Repair "
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_below="@+id/imageView"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tv"
                    android:layout_below="@+id/tvAc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="\u20B9 143"
                    android:textColor="@color/black"
                    android:padding="@dimen/_5sdp"
                    android:textSize="@dimen/_16sdp"
                    />

                <FrameLayout
                    android:id="@+id/fl"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/tvAc"
                    android:layout_toRightOf="@+id/tv"
                    >

                    <View
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@color/grey_"

                        />

                    <TextView
                        android:id="@+id/tvdata"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/tv_amt"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_5sdp"
                        android:text="\u20B9 270"
                        android:textColor="@color/grey_"
                        android:textSize="@dimen/_16sdp" />

                </FrameLayout>

                <TextView
                    android:id="@+id/tvv"
                    android:layout_below="@+id/tvAc"
                    android:layout_toRightOf="@+id/fl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center_vertical"
                    android:text="10% OFF "
                    android:textColor="@color/green"
                    android:padding="@dimen/_5sdp"
                    android:textSize="@dimen/_16sdp"
                    />

                <ImageView
                    android:id="@+id/ivgreens"
                    android:layout_toLeftOf="@+id/ivgreen"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_below="@+id/imageView"
                    android:background="@drawable/grey_border"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:src="@drawable/ic_trash__1_"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/white" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_below="@+id/tvv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/allui"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="@dimen/_10sdp"
                    app:cardCornerRadius="5dp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_25sdp"
                    app:cardElevation="@dimen/_5sdp"
                    app:contentPadding="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/allsideborder"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_20sdp"
                        >

                        <TextView
                            android:id="@+id/tvwallet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/roboto"
                            android:text="AC Repair"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_16sdp"
                             />



                        <TextView
                            android:id="@+id/text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="@color/black"
                            android:paddingLeft="@dimen/_10sdp"
                            android:textSize="@dimen/_16sdp"
                            android:gravity="right"
                            android:text="\u20B9 250"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"                            android:paddingStart="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/tvSubTotal"
                            android:layout_below="@+id/tvwallet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"                            android:fontFamily="@font/roboto"
                            android:text="Sub total"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_16sdp"
                            />



                        <TextView
                            android:id="@+id/tvsubmoney"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/text"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="@color/black"
                            android:paddingLeft="@dimen/_10sdp"
                            android:textSize="@dimen/_16sdp"
                            android:gravity="right"
                            android:text="\u20B9 250"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:paddingStart="@dimen/_10sdp" />


                        <TextView
                            android:id="@+id/tvDiscount"
                            android:layout_below="@+id/tvSubTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/roboto"
                            android:text="Discount"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_16sdp"
                            />



                        <TextView
                            android:id="@+id/tvrs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/tvSubTotal"
                            android:fontFamily="@font/roboto_bold"
                            android:paddingLeft="@dimen/_10sdp"
                            android:textSize="@dimen/_16sdp"
                            android:gravity="right"
                            android:text="+ \u20B9 0"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textColor="@color/green"
                            android:paddingStart="@dimen/_10sdp" />
                        <TextView
                            android:id="@+id/tvsafty"
                            android:layout_below="@+id/tvrs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/roboto"
                            android:text="Safety and Hygiene fee"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_16sdp"
                            />



                        <TextView
                            android:id="@+id/tvrus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/tvrs"
                           android:fontFamily="@font/roboto_bold"
                            android:paddingLeft="@dimen/_10sdp"
                            android:textSize="@dimen/_16sdp"
                            android:gravity="right"
                            android:text=" + \u20B9 10"
                            android:textColor="@color/color_progress"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:paddingStart="@dimen/_10sdp" />

                        <View
                            android:id="@+id/view"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_below="@+id/tvrus"
                            android:background="@color/grey_" />


                        <TextView
                            android:id="@+id/tvgrandTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/view"
                            android:fontFamily="@font/roboto_bold"
                            android:textSize="@dimen/_18sdp"
                            android:text="Grand Total"
                            android:textColor="@color/black"
                            android:layout_margin="@dimen/_10sdp"
                             />

                        <TextView
                            android:id="@+id/tvvaluue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/view"
                            android:fontFamily="@font/roboto_bold"
                            android:paddingLeft="@dimen/_10sdp"
                            android:textSize="@dimen/_18sdp"
                            android:text="\u20B9 10"
                            android:textColor="@color/black"
                            android:layout_margin="@dimen/_10sdp"
                            android:paddingStart="@dimen/_10sdp" />


                        <View
                            android:id="@+id/vvview"
                            android:layout_below="@+id/tvvaluue"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:background="@color/grey_" />


                        <RelativeLayout
                            android:id="@+id/relative"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/vvview"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:visibility="visible"
                            >

                            <TextView
                                android:id="@+id/tvChoosePaymentMethod"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textSize="@dimen/_20sdp"
                                android:text="Choose Payment Method"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_marginLeft="@dimen/_10sdp"

                                android:layout_marginBottom="@dimen/_15sdp"
/>


                            <TextView
                                android:id="@+id/signup"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_below="@+id/tvChoosePaymentMethod"
                                android:layout_margin="@dimen/_10sdp"
                                android:background="@drawable/yellow"
                                android:gravity="center"
                                android:fontFamily="@font/roboto_bold"
                                android:padding="@dimen/_10sdp"
                                android:text="Login &amp; Proceed to Payment"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="@dimen/_18sdp" />

                            <TextView
                                android:id="@+id/tvAddMoreServices"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_below="@+id/signup"
                                android:layout_margin="@dimen/_10sdp"
                                android:fontFamily="@font/roboto_bold"
                                android:background="@drawable/blue"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:padding="@dimen/_10sdp"
                                android:text="Add More Services"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_18sdp" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/relativelayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/vvview"
android:visibility="gone"
                            >

                            <TextView
                                android:id="@+id/tvChoosePaymentMethodLogin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:textSize="@dimen/_20sdp"
                                android:text="Choose Payment Method"
                                android:layout_centerHorizontal="true"
                                android:textColor="@color/black"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:layout_margin="@dimen/_15sdp"
                                android:paddingStart="@dimen/_10sdp" />

                            <RadioGroup
                                android:id="@+id/rg"
                                android:layout_width="wrap_content"
                                android:layout_below="@+id/tvChoosePaymentMethodLogin"
                                android:orientation="horizontal"
                                android:layout_centerInParent="true"
                                android:layout_height="wrap_content">


                            <RadioButton
                                android:id="@+id/rdwallet"
                                android:layout_width="@dimen/_120sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:gravity="center"
                                android:text="Wallet"
                                android:layout_margin="@dimen/_5sdp"
                                android:layout_gravity="right"
                                android:checked="true"
                                android:background="@drawable/allsideborder"
                                android:paddingRight="@dimen/_4sdp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_15sdp"
                                />
                                <RadioButton
                                    android:id="@+id/rdallet"
                                    android:layout_width="@dimen/_120sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:gravity="center"
                                    android:text="COD"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:layout_gravity="right"
                                    android:background="@drawable/allsideborder"
                                    android:paddingRight="@dimen/_4sdp"
                                    android:textAllCaps="true"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_15sdp"
                                    />
                            </RadioGroup>
                            <TextView
                                android:layout_below="@+id/rg"
                                android:id="@+id/totalavailablebalance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_10sdp"
                                android:textSize="@dimen/_16sdp"
                                android:layout_centerHorizontal="true"
                                android:text="Total Available Bal: \u20B9 8675.5"
                                android:textColor="@color/black"
                                android:fontFamily="@font/roboto"
                                android:layout_margin="@dimen/_10sdp"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:paddingStart="@dimen/_10sdp" />

                            <TextView

                                android:id="@+id/pay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_below="@+id/totalavailablebalance"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_marginRight="@dimen/_15sdp"
                                android:layout_marginBottom="@dimen/_20sdp"
                                android:background="@drawable/rect_light_blue"
                                android:gravity="center"
                                android:padding="@dimen/_10sdp"
                                android:text="Pay Now \u20B9 10"
                                android:textColor="@color/white"
                                android:fontFamily="@font/roboto"
                                android:textSize="@dimen/_18sdp" />
                        </RelativeLayout>

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>


            </RelativeLayout>


        </LinearLayout>
    </ScrollView>
    <ScrollView
        android:id="@+id/scroll_side_menu"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/_50sdp"
        android:animateLayoutChanges="true"
        android:background="@color/white"
        android:visibility="gone">

        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="@dimen/_10sdp"
            app:cardCornerRadius="5dp"
            app:cardElevation="@dimen/_5sdp"
            app:contentPadding="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rlDashBoard"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/imageView4"
                        android:gravity="center|left"
                        android:paddingLeft="@dimen/_10sdp"
                        android:text="Dashboard"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/grey_light" />

                <RelativeLayout
                    android:id="@+id/rr_home"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_home1"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/tv_home"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iv_home1"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_10sdp"
                        android:text="My Booking"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sdp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rr_category"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_category"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/tv_category"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iv_category"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_10sdp"
                        android:text="My Profile"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sdp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rr_recharge"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_recharge"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/tv_recharge"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iv_recharge"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_10sdp"
                        android:text="My Wallet"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sdp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rrInsurance"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_insurance"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/tv_insurance"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iv_insurance"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_10sdp"
                        android:text="Logout"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sdp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rr_About"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/iv_about"
                        android:layout_width="@dimen/_8sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/tv_About"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iv_about"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_10sdp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:text="About"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/tv_About"
                        android:background="@color/grey"
                        android:visibility="visible" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rr_Contact"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:visibility="visible">

