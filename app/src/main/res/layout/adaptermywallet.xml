<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAddMoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Add Money to Wallet"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/tvTranscationid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAddMoney"
                android:gravity="center_vertical"
                android:text="Transction id : TRANS0012122"
                android:textSize="@dimen/_7sdp"
                android:textColor="#9a9a9a"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvdateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTranscationid"
                android:gravity="center_vertical"
                android:text="28 Dec 2021    12:45 PM"
                android:textSize="@dimen/_7sdp"
                android:textColor="#9a9a9a"
                android:textStyle="normal" />

        </LinearLayout>
            <TextView
                android:id="@+id/tvWithdrawlMoney"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tvWithdrawlMoney"
                android:layout_weight="1"
                android:gravity="left"
                android:text="55"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                android:textStyle="normal" />


        <TextView
            android:id="@+id/tvdeposit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tvWithdrawlMoney"
            android:layout_weight="1"
            android:gravity="left"
            android:text="None"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvdeposit"
                android:gravity="left"
                android:src="@drawable/ic_baseline_check_circle_24" />

            <TextView
                android:id="@+id/tvtextdeposit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:layout_toRightOf="@+id/tvdeposit"
                android:fontFamily="@font/roboto"
                android:gravity="center_vertical"
                android:text="Success"
                android:textColor="@color/success"
                android:textSize="@dimen/_11sdp" />
        </LinearLayout>
    </LinearLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@+id/relativelayout"
        android:layout_margin="@dimen/_5sdp"
        android:background="@color/black" />
</RelativeLayout>
