<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10sdp">

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp">

        <ImageView
            android:id="@+id/ivImages"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentLeft="true"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_user" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:layout_toLeftOf="@+id/ivstar"
            android:padding="@dimen/_5sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:text="5.0"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />
        <ImageView
            android:id="@+id/ivstar"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_star_foreground" />

        <TextView
            android:id="@+id/choosefile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ivImages"
            android:paddingLeft="@dimen/_5sdp"
            android:padding="@dimen/_2sdp"
            android:fontFamily="@font/roboto_bold"
            android:text="Sachin Kumar"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp" />


        <TextView
            android:id="@+id/tvdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/choosefile"
            android:fontFamily="@font/roboto"
            android:layout_toRightOf="@+id/ivImages"
            android:paddingLeft="@dimen/_5sdp"
            android:text="18 Dec 2019"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvdate"
            android:fontFamily="@font/roboto"
            android:layout_toRightOf="@+id/ivImages"
            android:padding="@dimen/_5sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:text="Very good service. Would like to come again!"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />
    </RelativeLayout>
    <View
        android:layout_below="@+id/rel"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/grey_light"
        />
</RelativeLayout>