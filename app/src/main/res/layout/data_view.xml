<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/allui"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="@dimen/_10sdp"
        app:cardCornerRadius="5dp"
        app:cardElevation="@dimen/_5sdp"
        app:contentPadding="0dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/allsideborder"
            android:padding="@dimen/_10sdp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:scaleType="centerInside"
                android:layout_height="@dimen/_130sdp"
                android:background="@drawable/roolon" />

            <TextView
                android:id="@+id/tvwallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:layout_margin="@dimen/_10sdp"
                android:fontFamily="@font/teko_semibold"
                android:text="Low Contact on Roll Vaxing"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvwallet"
                android:layout_marginTop="@dimen/_5sdp"
                android:text=" 0,0 ratings"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvdate"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="  \u20A8 555 "
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCutPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvdate"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toRightOf="@+id/tvPrice"
                android:text=" \u20A8 446"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMainPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvdate"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toRightOf="@+id/tvCutPrice"
                android:text=" 10% off"
                android:textColor="@color/green"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/tvgreen"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/tvwallet"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/_10sdp"
                android:background="@color/green"
                android:fontFamily="@font/telex"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="Edit this Package"
                android:textColor="@color/white" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/tvgreen"
                android:background="@color/grey_light" />

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:drawableLeft="@drawable/dot_background"
                android:drawableTint="@color/black"
                android:padding="@dimen/_10sdp"
                android:text="Roll on the waxing: Rica vice choclate role on vax(Full Arm,Full Leg,Facial Hair removal Eyebrow Threading,upper lips Threading"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text"
                android:padding="@dimen/_10sdp"
                android:text="View Details >"
                android:textColor="@color/blue"
                android:textStyle="bold"

                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>