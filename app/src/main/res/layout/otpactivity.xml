<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <ImageView
      android:layout_width="@dimen/_50sdp"
      android:layout_height="@dimen/_50sdp"
      android:src="@drawable/ic_arrow"
      android:padding="@dimen/_15sdp"
      />


    <TextView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:background="@color/purple_700"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:text="OTP"
        android:textColor="@color/white"
        android:textSize="@dimen/_18sdp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_170sdp"
        android:fontFamily="@font/teko"
        android:gravity="center|bottom"
        android:text="Verification Code"
        android:textColor="@color/black"
        android:textSize="@dimen/_35sdp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:text="Please type the verification code sent to your number "
        />
    <TextView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:gravity="center"
        android:text="Register now to access your account ! "
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@drawable/allui"
        android:gravity="center"
        android:hint="Enter OTP"
        android:inputType="text"
        android:textColorHint="@color/black"
        android:textSize="@dimen/_15sdp" />


    <TextView
        android:id="@+id/btn"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_15sdp"
        android:background="@drawable/submitbutton"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:text="SUBMIT"
        android:textColor="@color/white"
        android:textSize="@dimen/_18sdp" />



</LinearLayout>